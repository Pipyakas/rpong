{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Raylib WASM Game",
      "type": "shell",
      "command": "make",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": []
    },
    {
      "label": "Start Local Web Server",
      "type": "shell",
      "command": "python3 -m http.server 8000",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": [],
      "isBackground": true
    },
    {
      "label": "Open Game in Browser",
      "type": "shell",
      "command": "xdg-open http://localhost:8000/rpong.html",
      "dependsOn": "Start Local Web Server",
      "problemMatcher": []
    },
    {
      "label": "Build Raylib Game for Windows",
      "type": "shell",
      "command": "C:/raylib/w64devkit/bin/mingw32-make",
      "args": ["-f", "Makefile.windows"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": []
    }
  ]
}